<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_selector"
              android:orientation="vertical">

    <View
        android:id="@+id/v_nav_item_top_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding"/>

    <pyk.myapplication.ui.widget.RobotoTextView
        style="@style/NavigationItem"
        android:id="@+id/tv_nav_item_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_item_title_height"
        android:layout_marginStart="@dimen/navigation_item_horizontal_padding"
        android:layout_marginEnd="@dimen/navigation_item_horizontal_padding"/>

    <View
        android:id="@+id/v_nav_item_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding"/>

    <View
        android:id="@+id/v_nav_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

</LinearLayout>